#!/bin/bash
set -e

# Run tslint.
bazel run @nodejs//:npm install
bazel build @npm//tslint/bin:tslint && bazel-bin/external/npm/tslint/bin/tslint.sh --project .

# Run integration tests
bazel test ... \
  --test_tag_filters=integration \
  --build_tests_only \
  --test_env=USE_CLOUD_BUILD_NETWORK=true
