{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@dataform/*": ["*", "build/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "inlineSourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "build"]
}
