{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "df/*": [
        "*",
        "bazel-bin/*",
        "bazel-genfiles/*"
      ]
    },
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@bazel/tsetse",
        "disabledRules": [
          "must-type-assert-json-parse"
        ]
      }
    ]
  },
  "exclude": [
    "bazel-*",
    "node_modules"
  ]
}