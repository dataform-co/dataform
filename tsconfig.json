{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#df/*": ["./*", "bazel-bin/*", "bazel-genfiles/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ESNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["bazel-*", "node_modules"],
}
