{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-config-security"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "max-classes-per-file": [false, 1],
    "no-floating-promises": true,
    "jsx-no-lambda": false,
    "ordered-imports": [
      true,
      {
        "module-source-path": "full",
        "grouped-imports": true,
        "groups": [
          {
            "name": "internal",
            "match": "df*/*",
            "order": 2
          },
          {
            "name": "external",
            "match": ".*",
            "order": 1
          }
        ]
      }
    ]
  }
}
